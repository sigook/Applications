@model Covenant.IdentityServer.Controllers.Account.Models.ConfirmEmailAddressModel

@{
    ViewBag.Title = "Confirm Account";
    Layout = "_LayoutLogin";
}
<div class="main bg-login">
    <div class="logo"></div>
    <div class="main-container path-login">
        <div class="white-container">
            <div>
                <div class="login-top">
                    @await Html.PartialAsync("_Logo")
                    <p>Please confirm your account clicking bellow.</p>
                </div>

                <form asp-action="ConfirmEmailAddress" asp-controller="Account" method="post">
                    <input type="hidden" asp-for="Id"/>
                    <input type="hidden" asp-for="Token"/>

                    @if (!ViewContext.ModelState.IsValid)
                    {
                        <div asp-validation-summary="All"></div>
                    }
                    <button class="background-btn full-btn orange-button login-button" type="submit">
                        CONFIRM YOUR ACCOUNT
                    </button>

                </form>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_LogoBottom")
</div>