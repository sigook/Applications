@model Covenant.IdentityServer.Controllers.Account.Models.LogoutViewModel
@{
    Layout = "_LayoutLogin";
}
<div class="main bg-login">
    <div class="logo"></div>
    <div class="main-container path-login">
        <div class="white-container">
            <div>
                <div class="login-top">
                    @await Html.PartialAsync("_Logo")
                    <h2>Logout</h2>
                    <p>Would you like to logout of Sigook?</p>
                </div>

                <form asp-action="Logout">
                    <input type="hidden" name="logoutId" value="@Model.LogoutId"/>
                    <button class="background-btn full-btn orange-button login-button">
                        YES
                    </button>
                </form>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_LogoBottom")
</div>